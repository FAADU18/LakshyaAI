# Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env files to version control!

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NEXT_PUBLIC_APP_NAME=LakshyaAI
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL (recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/lakshyaai_db

# MongoDB (alternative)
# MONGODB_URI=mongodb://localhost:27017/lakshyaai

# ===========================================
# AUTHENTICATION SERVICES
# ===========================================
# NextAuth.js
NEXTAUTH_SECRET=your-super-secret-jwt-secret-here
NEXTAUTH_URL=http://localhost:3000

# Clerk (alternative)
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
# CLERK_SECRET_KEY=sk_test_xxxxx

# Supabase (alternative)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# AI/ML SERVICES
# ===========================================
# OpenAI API
OPENAI_API_KEY=sk-xxxxx

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your-google-ai-key

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-key

# ===========================================
# EMAIL SERVICES
# ===========================================
# SendGrid
SENDGRID_API_KEY=SG.xxxxx

# Resend
RESEND_API_KEY=re_xxxxx

# ===========================================
# STORAGE SERVICES
# ===========================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=lakshyaai-uploads

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===========================================
# PAYMENT SERVICES
# ===========================================
# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Razorpay (for Indian market)
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=your-razorpay-secret

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (Error Monitoring)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ===========================================
# EXTERNAL APIs
# ===========================================
# Career/Job APIs
INDEED_API_KEY=your-indeed-api-key
LINKEDIN_API_KEY=your-linkedin-api-key

# Educational APIs
COURSERA_API_KEY=your-coursera-api-key
UDEMY_API_KEY=your-udemy-api-key

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Rate limiting
UPSTASH_REDIS_REST_URL=https://xxxxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
# Prisma (if using)
# DATABASE_URL is already defined above

# Vercel (deployment)
# These are automatically set by Vercel
# VERCEL_URL=
# VERCEL_ENV=
